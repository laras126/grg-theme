<a title="Menu" href="#" class="nav-trigger">Menu</a>

<nav id="menu" class="site-nav nav-main" role="navigation">
		<ul>
			{% for item in main_nav.get_items %}
				<li class="nav-item {{item.classes | join(' ')}}">
					<a class="nav-item-link" href="{{item.link}}">{{item.title}}</a>
			{% if item.get_children %}
				<ul class="nav nav-drop">
					{% for child in item.get_children %}
						<li class="nav-drop-item">
							<a class="nav-drop-link" href="{{child.get_link}}">{{child.title}}</a>
						</li>
					{% endfor %}
				</ul>
			{% endif %}
		</li>
	{% endfor %}
	</ul>
</nav> <!-- /.nav-main -->
